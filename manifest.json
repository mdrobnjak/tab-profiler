{
    "name": "Tab Snapshots",
    "description": "Capture multiple tabs as a snapshot. Launch them with the click of a button.",
    "version": "1.0",
    "manifest_version": 3,
    "background": {
        "service_worker": "background.js"
    },
    "permissions": ["storage", "activeTab", "scripting"],
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "/images/camera-with-flash.png",
        "32": "/images/camera-with-flash.png",
        "48": "/images/camera-with-flash.png",
        "128": "/images/camera-with-flash.png"
      }
    },
    "icons": {
        "16": "/images/camera-with-flash.png",
        "32": "/images/camera-with-flash.png",
        "48": "/images/camera-with-flash.png",
        "128": "/images/camera-with-flash.png"
    },
    "options_page": "options.html"
}